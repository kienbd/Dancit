<!-- Static navbar -->
<nav class="navbar navbar-default navbar-static-top">
  <div class="container">
    <div class="navbar-header col-sm-6 col-md-8">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand col-md-3" href="/">
        <img src="<%=image_path('logo.png')%>" class="logo">
      </a>
      <div class="col-sm-8 col-md-9">
        <%= form_tag search_videos_path,method: :get,class: "navbar-form" do  %>
          <div class="input-group" style="width: 100%">
            <input type="text" class="form-control" placeholder="Search" name="query" id="srch-term">
            <div class="input-group-btn">
              <button class="btn btn-default" type="submit" style="height: 34px"><span class="glyphicon glyphicon-search"></span></button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div id="navbar" class="navbar-collapse collapse">
      <div class="col-sm-6 col-md-4">
        <% if current_user %>
        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
          <a href="#" class="dropdown-toggle user-top" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
            <%= truncate(current_user.username,length: 20) %> <span class="glyphicon glyphicon-user"></span></a>
            <ul class="dropdown-menu">
              <li><a href="<%= videos_user_path(current_user) %>">My Videos</a></li>
              <li><a href="<%=edit_user_path(current_user)%>">Profile</a></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to "Sign Out",destroy_user_session_path,method: :delete %></li>
            </ul>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= button_to "Add new Video",new_video_path,class: "btn btn-warning btn-block",method: :get %>
          </li>
        </ul>
        <% else %>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= button_to "Sign In",new_user_session_path,class: "btn btn-default btn-block" %>
          </li>
        </ul>
        <% end %>
        <div class="clearfix"></div>
      </div>
    </div><!--/.nav-collapse -->
  </div>
</nav>
