<div class="container">
  <div class="vid-index-holder row">
    <div class="vid-index-main-content col-sm-12">
      <div class="row">
        <div class="col-sm-12 col-md-12">
          <div class="col-sm-12 col-md-10">
            <h3><%= @user.username %>'s videos</h3>
          </div>
          <div class="col-sm-12 col-md-2 text-right">
            <% if @user != current_user %>
              <% if current_user.following? @user%>
                <div style="margin: 10px 0px;" class="follow-btn">
                  <%= link_to "unfollow",unfollow_user_path(follow_id: @user.id),method: :delete, remote: true,class: "btn btn-danger btn-block" %>
                </div>
              <% else %>
                <div style="margin: 10px 0px;" class="follow-btn">
                  <%= link_to "follow",follow_user_path(follow_id: @user.id),method: :post, remote: true,class: "btn btn-default btn-block" %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
        <% @videos.each do |vid| %>
            <%= render partial: "videos/vid_thumb",locals: {vid: vid} %>
        <% end%>
        <div class="clear clearfix"></div>
        <div>
          <%= will_paginate @videos %>
        </div>
      </div>
    </div>
  </div>
</div>
